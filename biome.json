{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noConstantCondition": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"complexity": {
				"noForEach": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"files": {
		"include": [
			"src/*.ts",
			"src/*.tsx",
			"src/**/*.tsx",
			"src/**/*.ts",
			"ser/**/*.ts",
			"ser/*.ts",
			"lib/**/*.ts",
			"lib/*.ts",
			"scripts/**/*.ts",
			"scripts/*.ts",
			"packages/**/*.ts",
			"packages/**/*.tsx"
		],
		"ignore": [
			"node_modules",
			"esm",
			"cjs",
			"*.js"
		]
	}
}